{
  "extends": ["../tsconfig.base.json"],
  "compilerOptions": {
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["../core/*"],
      "@library/*": ["../library/*"]
    }
  },
  "include": [
    "../core/**/*.ts",
    "../library/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
