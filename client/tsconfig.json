{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./client/src/*"],
      "@core/*": ["./core/*"],
      "@components/*": ["./client/src/components/*"],
      "@styles/*": ["./client/src/styles/*"]
    }
  },
  "include": [
    "../core/**/*.ts",
    "../library/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
